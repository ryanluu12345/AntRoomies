<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:id="@+id/swipe_browse_ll"
    android:layout_width="match_parent"
    android:layout_margin="10sp"
    android:orientation="vertical"
    android:background="@drawable/maroon_background_gradient"
    xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/swipe_card_profile_picture_iv"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/prof"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="1sp"/>


            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/swipe_card_name_tv"
                    android:layout_marginTop="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ryan Nathan Luu"
                    android:textSize="20sp"
                    android:textColor="@color/maroon"/>

                <TextView
                    android:id="@+id/swipe_card_about_me_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:gravity="center"
                    android:text="Mechanical engineering student who aspires to develop software communities, and consumer applications"
                    android:textSize="15sp"/>

            </LinearLayout>


            <LinearLayout
                android:background="@color/white"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/seeking"
                    android:layout_marginTop="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Seeking"
                    android:textSize="20sp"
                    android:textColor="@color/maroon">

                </TextView>

                <TextView
                    android:id="@+id/swipe_card_roommate_prefs_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:gravity="center"
                    android:text="Someone that I can chill with. Ultimately a great people person who is great to be around"
                    android:textSize="15sp"/>

            </LinearLayout>

</LinearLayout>
