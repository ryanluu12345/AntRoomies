<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/sm_profile_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            
            
            <ImageView
                android:id="@+id/profile_pic_cv"
                android:src="@drawable/g_symbol"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/person_name_cv"
                android:layout_toRightOf="@+id/profile_pic_cv"
                android:layout_alignParentTop="true"
                android:text="Ryan Nathan Luu"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about_me_cv"
                android:layout_toRightOf="@+id/profile_pic_cv"
                android:layout_below="@+id/person_name_cv"
                android:text="Inquisitive. Inspiring. Friendly"
                android:textSize="15sp"
                />

            <Button
                android:id="@+id/like_cv"
                android:layout_marginLeft="10sp"
                android:gravity="right"
                android:layout_marginRight="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/about_me_cv"
                />
            
            
        </RelativeLayout>
        
        
    </android.support.v7.widget.CardView>



</LinearLayout>