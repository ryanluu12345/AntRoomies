<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/upload_image_btn"
            android:tint="@color/black"
            android:scaleType="centerInside"
            android:src="@drawable/upload_photos"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:onClick="onCameraUploadClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            />

        <EditText
            android:id="@+id/fullName"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="Enter your full name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Me"
            />

        <EditText
            android:id="@+id/aboutMeBlurb"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a description about yourself"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/personalPrefTitle"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:text="Personal Preferences"
            />

        <EditText
            android:id="@+id/personalPrefBlurb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="What do you want in a roommate?"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="90sp"
        android:layout_marginRight="90sp"
        android:layout_marginBottom="60sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/signOut"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:text="Sign Out"
            android:layout_height="50sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/nextPrefBtn"
            android:text="Next"
            android:onClick="onNextPrefPageClick"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/skip_pref"
            android:text="Skip"
            android:onClick="onSkipPref"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_weight="1"/>

    </LinearLayout>




</LinearLayout>
